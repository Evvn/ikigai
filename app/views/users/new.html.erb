<p>signup page</p>

<h3>-- show error if has any-----</h3>
<% if flash[:notice] %>
    <% flash[:notice].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
    
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
    
    <%= f.submit "Create my account" %>

<% end %>

<form action="">Would you like to mentor someone?
    <% @categories.each do |c| %>
        <input type="checkbox" name="c<%= c.id %>" value="<%= c.name %>"><%= c.name %>
    <%end%>
    <button>yes, let me be the mentor</button>
</form>






