<h1>Log in</h1> 

<% if flash[:notice] %>
    <h3>-- show error if has any-----</h3>
    <%= flash[:notice] %>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email%>

    <%= f.label :password %>
    <%= f.password_field :password%>

    <%= f.submit "Log in"%>
<% end %>

<p>New user? <%= link_to "Sign up now!", '../users/new' %></p>
